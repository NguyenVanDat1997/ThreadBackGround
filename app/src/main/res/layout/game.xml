<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnButton"
        android:text="Xốc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:numColumns="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bau" />


        <ImageView
            android:id="@+id/tow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bau" />

        <ImageView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bau" />

    </RelativeLayout>

    <TextView
        android:id="@+id/money"
        android:layout_marginTop="20dp"
        android:text="0K"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="27dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text=""
            android:id="@+id/tickHuou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ca"
            android:background="@drawable/daus"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tickBau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/bau"
            android:background="@drawable/daus"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tickGa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ga"
            android:background="@drawable/daus"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tickCa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/huou"
            android:layout_toStartOf="@+id/ca"
            android:background="@drawable/daus"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tickCua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bau"
            android:layout_toStartOf="@+id/cua"
            android:background="@drawable/daus"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tickTom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ga"
            android:layout_toStartOf="@+id/ga"
            android:background="@drawable/daus"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/huou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/huou" />

        <ImageView
            android:id="@+id/bau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bau" />

        <ImageView
            android:id="@+id/ga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tom"
            android:background="@drawable/ga" />

        <ImageView
            android:id="@+id/ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/huou"
            android:layout_below="@+id/huou"
            android:background="@drawable/ca" />

        <ImageView
            android:id="@+id/cua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bau"
            android:layout_below="@+id/bau"
            android:background="@drawable/cua" />

        <ImageView
            android:id="@+id/tom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ga"
            android:layout_marginEnd="23dp"
            android:background="@drawable/tom" />

        <TextView
            android:id="@+id/diem"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm cao"
            android:textColor="#363636"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/ca"/>
        <TextView
            android:id="@+id/first"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 : 50000"
            android:textColor="#363636"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/diem"/>
        <TextView
            android:id="@+id/second"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 : 0"
            android:textColor="#363636"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/first"/>


    </RelativeLayout>


</LinearLayout>
